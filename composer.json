{
    "name": "sanmai/console",
    "description": "Ready-made extensible console application using Symfony Console component",
    "license": "Apache-2.0",
    "type": "library",
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "sanmai/pipeline": "^6.17",
        "sanmai/version-info": "^0.2",
        "symfony/console": "^6.0 || ^7.0"
    },
    "require-dev": {
        "composer/composer": "^2.2",
        "dg/bypass-finals": "^1.9",
        "ergebnis/composer-normalize": "^2.8",
        "friendsofphp/php-cs-fixer": "^3.17",
        "infection/infection": ">=0.29",
        "league/pipeline": "^0.3 || ^1.0",
        "php-coveralls/php-coveralls": "^2.4.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2",
        "phpunit/phpunit": ">=9.4 <12",
        "symfony/process": "^7.3",
        "vimeo/psalm": "^6.12"
    },
    "autoload": {
        "psr-4": {
            "ConsoleApp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestApp\\": "tests/integration/bootstrap/src/",
            "TestProviderApp\\": "tests/integration/custom/src/",
            "Tests\\ConsoleApp\\": "tests/unit/"
        }
    },
    "bin": [
        "bin/console"
    ],
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true
    },
    "extra": {
        "preferred-install": "dist"
    }
}
